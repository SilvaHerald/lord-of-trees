<!-- Settings Popup Modal -->
<div
  id="mobile-settings-popup"
  class="fixed inset-0 z-[60] flex hidden items-end justify-center p-4 sm:items-center"
  role="dialog"
  aria-modal="true"
  aria-labelledby="settings-title"
>
  <!-- Backdrop with blur -->
  <div
    class="fixed inset-0 bg-black/60 backdrop-blur-md transition-all duration-300"
    id="settings-backdrop"
    style="backdrop-filter: blur(8px); -webkit-backdrop-filter: blur(8px);"
  >
  </div>

  <!-- Modal Container -->
  <div class="animate-slide-up relative z-10 w-full max-w-lg">
    <div
      class="max-h-[80vh] overflow-hidden rounded-2xl bg-white shadow-2xl sm:rounded-3xl dark:bg-gray-900"
    >
      <!-- Header -->
      <div
        class="flex items-center justify-between border-b border-gray-200 px-6 py-4 dark:border-gray-700"
      >
        <h2 id="settings-title" class="text-xl font-bold text-gray-900 dark:text-white">
          {t('mobile.nav.settingsMenu.title')}
        </h2>
        <button
          id="close-settings"
          class="rounded-lg p-2 transition-colors hover:bg-gray-100 dark:hover:bg-gray-800"
          aria-label="Close settings"
        >
          <svg
            class="h-6 w-6 text-gray-700 dark:text-gray-300"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <!-- Content -->
      <div class="max-h-[calc(80vh-5rem)] overflow-y-auto px-6 py-4">
        <!-- Theme Section -->
        <div class="mb-6">
          <h3
            class="mb-3 text-sm font-semibold tracking-wide text-gray-900 uppercase dark:text-white"
          >
            {t('mobile.nav.settingsMenu.theme.title')}
          </h3>

          <!-- Light Mode Option -->
          <label class="group flex cursor-pointer items-center justify-between py-4">
            <div class="flex items-center gap-3">
              <div
                class="rounded-lg bg-gray-100 p-2 transition-colors group-hover:bg-gray-200 dark:bg-gray-800 dark:group-hover:bg-gray-700"
              >
                <svg
                  class="h-5 w-5 text-gray-700 dark:text-gray-300"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
                  ></path>
                </svg>
              </div>
              <div>
                <p class="font-medium text-gray-900 dark:text-white">
                  {t('mobile.nav.settingsMenu.theme.lightMode.title')}
                </p>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                  {t('mobile.nav.settingsMenu.theme.lightMode.description')}
                </p>
              </div>
            </div>
            <input
              type="radio"
              name="theme"
              value="light"
              class="h-5 w-5 text-orange-600 focus:ring-2 focus:ring-orange-500"
              data-theme-option
            />
          </label>

          <!-- Dark Mode Option -->
