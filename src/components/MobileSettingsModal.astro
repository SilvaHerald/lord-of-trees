                <p class="text-sm text-gray-600 dark:text-gray-400">Match system preference</p>
              </div>
            </div>
            <input
              type="radio"
              name="theme"
              value="system"
              class="w-5 h-5 text-orange-600 focus:ring-2 focus:ring-orange-500"
              data-theme-option
            />
          </label>
        </div>

        <!-- Language Section -->
        <div class="mb-4">
          <h3 class="text-sm font-semibold text-gray-900 dark:text-white mb-3 uppercase tracking-wide">
            Language
