                  {t('mobile.nav.settingsMenu.theme.system.description')}
                </p>
              </div>
            </div>
            <input
              type="radio"
              name="theme"
              value="system"
              class="h-5 w-5 text-orange-600 focus:ring-2 focus:ring-orange-500"
              data-theme-option
            />
          </label>
        </div>

        <!-- Language Section -->
        <div class="mb-4">
          <h3
            class="mb-3 text-sm font-semibold tracking-wide text-gray-900 uppercase dark:text-white"
          >
            {t('mobile.nav.settingsMenu.language.title')}
          </h3>

          {
            availableLanguages.map((lang, index) => (
              <label
                class={`group flex cursor-pointer items-center justify-between py-4 ${index > 0 ? 'border-t border-gray-200 dark:border-gray-700' : ''}`}
              >
                <div class="flex items-center gap-3">
                  <span class="text-2xl">{lang.flag}</span>
                  <p class="font-medium text-gray-900 dark:text-white">{lang.name}</p>
                </div>
                <input
                  type="radio"
                  name="language"
                  value={lang.code}
                  checked={lang.code === currentLang}
                  class="h-5 w-5 text-orange-600 focus:ring-2 focus:ring-orange-500"
                  data-language-option
                />
              </label>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function initMobileSettings() {
    const settingsBtn = document.getElementById('mobile-settings-btn');
    const popup = document.getElementById('mobile-settings-popup');
    const closeBtn = document.getElementById('close-settings');
    const backdrop = document.getElementById('settings-backdrop');

    if (!settingsBtn || !popup) return;

    // Get current theme
    const getCurrentTheme = () => {
      const saved = localStorage.getItem('theme');
      if (saved) return saved;
      return 'system';
    };

    // Set initial theme radio
    const themeOptions = document.querySelectorAll('[data-theme-option]');
    const currentTheme = getCurrentTheme();
    themeOptions.forEach(option => {
      if ((option as HTMLInputElement).value === currentTheme) {
        (option as HTMLInputElement).checked = true;
      }
    });

    // Open popup
    const openPopup = () => {
      popup.classList.remove('hidden');
      popup.classList.add('flex');
      document.body.style.overflow = 'hidden';

      // Trigger animation
      setTimeout(() => {
        backdrop?.classList.add('backdrop-visible');
      }, 10);
    };

    // Close popup
    const closePopup = () => {
      backdrop?.classList.remove('backdrop-visible');

      setTimeout(() => {
        popup.classList.add('hidden');
        popup.classList.remove('flex');
        document.body.style.overflow = '';
      }, 300);
    };

    // Event listeners
    settingsBtn.addEventListener('click', openPopup);
    closeBtn?.addEventListener('click', closePopup);
    backdrop?.addEventListener('click', closePopup);

    // Close on escape
    document.addEventListener('keydown', e => {
      if (e.key === 'Escape' && !popup.classList.contains('hidden')) {
        closePopup();
      }
    });

    // Theme change
    themeOptions.forEach(option => {
      option.addEventListener('change', e => {
        const value = (e.target as HTMLInputElement).value;
        localStorage.setItem('theme', value);

        if (value === 'light') {
          document.documentElement.classList.remove('dark');
        } else if (value === 'dark') {
          document.documentElement.classList.add('dark');
        } else {
          // System
          const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
          if (prefersDark) {
            document.documentElement.classList.add('dark');
          } else {
            document.documentElement.classList.remove('dark');
          }
        }
      });
    });

    // Language change
    const languageOptions = document.querySelectorAll('[data-language-option]');
    languageOptions.forEach(option => {
      option.addEventListener('change', e => {
        const value = (e.target as HTMLInputElement).value;
        const currentPath = window.location.pathname;

        // Remove current language from path
        const pathWithoutLang = currentPath.replace(/^\/(en|vi|es|fr)/, '');

        // Redirect to new language
        if (value === 'en') {
          window.location.href = pathWithoutLang || '/';
        } else {
          window.location.href = `/${value}${pathWithoutLang}`;
        }
      });
    });
  }

  // Initialize
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initMobileSettings);
  } else {
    initMobileSettings();
  }

  // Re-initialize after navigation
  document.addEventListener('astro:page-load', initMobileSettings);
</script>

<style>
  /* Modal animations */
  @keyframes slide-up {
    from {
      transform: translateY(100%);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  /* Mobile: slide from bottom */
  @media (max-width: 640px) {
    .animate-slide-up {
      animation: slide-up 0.3s ease-out;
    }
  }

  /* Desktop: fade and scale */
  @media (min-width: 641px) {
    @keyframes fade-scale {
      from {
        transform: scale(0.95);
        opacity: 0;
      }
      to {
        transform: scale(1);
        opacity: 1;
      }
    }

    .animate-slide-up {
      animation: fade-scale 0.2s ease-out;
    }
  }

  /* Backdrop blur effect */
  #settings-backdrop {
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  #settings-backdrop.backdrop-visible {
    opacity: 1;
  }

  /* Enhanced blur for better visibility */
  @supports (backdrop-filter: blur(8px)) or (-webkit-backdrop-filter: blur(8px)) {
    #settings-backdrop {
      backdrop-filter: blur(8px);
      -webkit-backdrop-filter: blur(8px);
    }
  }

  /* Fallback for browsers without backdrop-filter */
  @supports not ((backdrop-filter: blur(8px)) or (-webkit-backdrop-filter: blur(8px))) {
    #settings-backdrop {
      background-color: rgba(0, 0, 0, 0.75);
    }
  }

  /* Custom radio button styling */
  input[type='radio'] {
    appearance: none;
    -webkit-appearance: none;
    width: 1.25rem;
    height: 1.25rem;
    border: 2px solid #d1d5db;
    border-radius: 50%;
    outline: none;
    cursor: pointer;
    position: relative;
    transition: all 0.2s;
  }

  input[type='radio']:checked {
    border-color: #f97316;
    background-color: #f97316;
  }

  input[type='radio']:checked::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 0.5rem;
    height: 0.5rem;
    background: white;
    border-radius: 50%;
  }

  .dark input[type='radio'] {
    border-color: #4b5563;
  }

  .dark input[type='radio']:checked {
    border-color: #f97316;
    background-color: #f97316;
  }
</style>
