---
import { defaultLang, useTranslations, type Language } from '@libs/i18n/config';

export interface Props {
  lang?: Language;
}

const { lang = defaultLang } = Astro.props;

const t = useTranslations(lang);

const searchingText = t('mobile.nav.searchPopup.searchResult.searching')
const searchResultText = t('mobile.nav.searchPopup.searchResult.text')
const searchResultDescription = t('mobile.nav.searchPopup.searchResult.description')
---

<!-- Search Popup Modal -->
<div
  id="mobile-search-popup"
  class="fixed inset-0 z-[70] hidden"
  role="dialog"
  aria-modal="true"
  aria-labelledby="search-title"
>
  <!-- Backdrop -->
  <div
    class="fixed inset-0 bg-black/60 backdrop-blur-md"
    id="search-backdrop"
    style="backdrop-filter: blur(8px); -webkit-backdrop-filter: blur(8px);"
  >
  </div>

  <!-- Search Container -->
  <div class="animate-fade-in relative flex h-full flex-col bg-white dark:bg-gray-900">
    <!-- Header with Search Input -->
    <div class="flex-shrink-0 border-b border-gray-200 px-4 py-3 dark:border-gray-700">
      <div class="flex items-center gap-3">
        <!-- Search Icon -->
        <svg
          class="h-5 w-5 flex-shrink-0 text-gray-400"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>

        <!-- Search Input -->
        <input
          type="text"
          id="mobile-search-input"
          placeholder={t('mobile.nav.searchPopup.searchInput.placeholder')}
          class="flex-1 bg-transparent text-lg text-gray-900 placeholder-gray-500 focus:outline-none dark:text-white dark:placeholder-gray-400"
          autofocus
        />

        <!-- Close Button -->
        <button
          id="close-search-popup"
          class="flex-shrink-0 rounded-lg p-2 transition-colors hover:bg-gray-100 dark:hover:bg-gray-800"
          aria-label="Close search"
        >
          <svg
            class="h-5 w-5 text-gray-500 dark:text-gray-400"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Search Results / Suggestions -->
    <div class="flex-1 overflow-y-auto px-4 py-4">
      <!-- Quick Filters -->
      <div class="mb-4">
        <h3
          class="mb-2 text-xs font-semibold tracking-wide text-gray-500 uppercase dark:text-gray-400"
        >
          {t('mobile.nav.searchPopup.quickFilter.title')}
        </h3>
        <div class="flex flex-wrap gap-2">
          <button
            class="rounded-full bg-gray-100 px-3 py-1.5 text-sm text-gray-700 transition-colors hover:bg-gray-200 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700"
          >
            üìç {t('mobile.nav.searchPopup.quickFilter.filters.destinations')}
          </button>
          <button
            class="rounded-full bg-gray-100 px-3 py-1.5 text-sm text-gray-700 transition-colors hover:bg-gray-200 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700"
          >
            üè∑Ô∏è {t('mobile.nav.searchPopup.quickFilter.filters.tags')}
          </button>
          <button
            class="rounded-full bg-gray-100 px-3 py-1.5 text-sm text-gray-700 transition-colors hover:bg-gray-200 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700"
          >
            üó∫Ô∏è {t('mobile.nav.searchPopup.quickFilter.filters.countries')}
          </button>
        </div>
      </div>

      <!-- Search Results Container -->
      <div id="search-results-container" class="space-y-3">
        <!-- Empty State -->
        <div class="py-12 text-center">
          <svg
            class="mx-auto mb-4 h-16 w-16 text-gray-300 dark:text-gray-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
          <p class="mb-2 text-lg text-gray-500 dark:text-gray-400">
            {t('mobile.nav.searchPopup.searchResult.text')}
          </p>
          <p class="text-sm text-gray-400 dark:text-gray-500">
            {t('mobile.nav.searchPopup.searchResult.description')}
          </p>
        </div>

        <!-- Example Results (will be populated by search) -->
        <!-- <a href="/stories/bali" class="block p-4 bg-gray-50 dark:bg-gray-800 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
          <div class="flex items-start gap-3">
            <img src="/images/bali.jpg" alt="Bali" class="w-16 h-16 rounded-lg object-cover" />
            <div class="flex-1 min-w-0">
              <h4 class="font-semibold text-gray-900 dark:text-white mb-1">72 Hours in Bali</h4>
              <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-2">
                An adventure-packed weekend discovering Bali's natural wonders...
              </p>
              <div class="flex gap-2 mt-2">
                <span class="text-xs px-2 py-1 bg-orange-100 dark:bg-orange-900/30 text-orange-800 dark:text-orange-300 rounded">Indonesia</span>
              </div>
            </div>
          </div>
        </a> -->
      </div>

      <!-- Search Tips -->
      <div class="mt-8 border-t border-gray-200 pt-6 dark:border-gray-700">
        <h3
          class="mb-3 text-xs font-semibold tracking-wide text-gray-500 uppercase dark:text-gray-400"
        >
          {t('mobile.nav.searchPopup.searchTips.title')}
        </h3>
        <div class="space-y-2 text-sm text-gray-600 dark:text-gray-400">
          <p>
            ‚Ä¢ {t('mobile.nav.searchPopup.searchTips.tip1.text1')}
            <code class="rounded bg-gray-100 px-1.5 py-0.5 text-xs dark:bg-gray-800"
              >{t('mobile.nav.searchPopup.searchTips.tip1.highlight')}</code
            >
            {t('mobile.nav.searchPopup.searchTips.tip1.text2')}
          </p>
          <p>
            ‚Ä¢ {t('mobile.nav.searchPopup.searchTips.tip2.text1')}
            <code class="rounded bg-gray-100 px-1.5 py-0.5 text-xs dark:bg-gray-800"
              >{t('mobile.nav.searchPopup.searchTips.tip2.highlight')}</code
            >
            {t('mobile.nav.searchPopup.searchTips.tip2.text2')}
          </p>
          <p>
            ‚Ä¢ {t('mobile.nav.searchPopup.searchTips.tip3.text1')}
            <code class="rounded bg-gray-100 px-1.5 py-0.5 text-xs dark:bg-gray-800"
              >{t('mobile.nav.searchPopup.searchTips.tip3.highlight')}</code
            >
            {t('mobile.nav.searchPopup.searchTips.tip3.text2')}
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<script define:vars={{ searchingText, searchResultText, searchResultDescription }}>
  function initMobileSearch() {
    const searchPopup = document.getElementById('mobile-search-popup');
    const searchBackdrop = document.getElementById('search-backdrop');
    const closeBtn = document.getElementById('close-search-popup');
    const searchInput = document.getElementById('mobile-search-input');

    // Triggers (from header and mobile menu)
    const headerSearchBtn = document.getElementById('mobile-search-trigger');
    const mobileMenuSearchBtn = document.getElementById('mobile-search-trigger');

    if (!searchPopup) return;

    // Open search
    const openSearch = () => {
      searchPopup.classList.remove('hidden');
      document.body.style.overflow = 'hidden';

      // Focus input after animation
      setTimeout(() => {
        searchInput?.focus();
      }, 100);

      // Close mobile menu if open
      document.getElementById('mobile-menu-overlay')?.classList.add('hidden');
    };

    // Close search
    const closeSearch = () => {
      searchPopup.classList.add('hidden');
      document.body.style.overflow = '';
      if (searchInput) searchInput.value = '';
    };

    // Event listeners
    headerSearchBtn?.addEventListener('click', openSearch);
    mobileMenuSearchBtn?.addEventListener('click', openSearch);
    closeBtn?.addEventListener('click', closeSearch);
    searchBackdrop?.addEventListener('click', closeSearch);

    // Close on escape
    document.addEventListener('keydown', e => {
      if (e.key === 'Escape' && !searchPopup.classList.contains('hidden')) {
        closeSearch();
      }

      // Open with "/" key
      if (e.key === '/' && !searchPopup.classList.contains('hidden') === false) {
        e.preventDefault();
        openSearch();
      }
    });

    // Simple search functionality (integrate with your search implementation)
    searchInput?.addEventListener('input', e => {
      const query = e.target.value.trim();
      const resultsContainer = document.getElementById('search-results-container');

      if (!resultsContainer) return;

      if (query.length < 2) {
        // Show empty state
        resultsContainer.innerHTML = `
          <div class="text-center py-12">
            <svg class="w-16 h-16 mx-auto mb-4 text-gray-300 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <p class="text-gray-500 dark:text-gray-400 text-lg mb-2">${searchResultText}</p>
            <p class="text-gray-400 dark:text-gray-500 text-sm">
              ${searchResultDescription}
            </p>
          </div>
        `;
      } else {
        // Show loading or results
        resultsContainer.innerHTML = `
          <div class="text-center py-8">
            <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-orange-500"></div>
            <p class="text-gray-500 dark:text-gray-400 mt-4">${searchingText}</p>
          </div>
        `;

        // TODO: Implement actual search with Fuse.js or your search solution
        // For now, just show loading state
      }
    });
  }

  // Initialize
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initMobileSearch);
  } else {
    initMobileSearch();
  }

  document.addEventListener('astro:page-load', initMobileSearch);
</script>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .animate-fade-in {
    animation: fade-in 0.2s ease-out;
  }

  /* Line clamp utility */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Custom code tag styling */
  code {
    font-family:
      ui-monospace, SFMono-Regular, 'SF Mono', Menlo, Consolas, 'Liberation Mono', monospace;
  }
</style>
