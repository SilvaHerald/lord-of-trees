        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function initMobileSearch() {
    const searchPopup = document.getElementById('mobile-search-popup');
    const searchBackdrop = document.getElementById('search-backdrop');
    const closeBtn = document.getElementById('close-search-popup');
    const searchInput = document.getElementById('mobile-search-input') as HTMLInputElement;

    // Triggers (from header and mobile menu)
    const headerSearchBtn = document.getElementById('mobile-search-trigger');
    const mobileMenuSearchBtn = document.getElementById('mobile-search-trigger');

    if (!searchPopup) return;

    // Open search
    const openSearch = () => {
      searchPopup.classList.remove('hidden');
      document.body.style.overflow = 'hidden';

      // Focus input after animation
      setTimeout(() => {
        searchInput?.focus();
      }, 100);

      // Close mobile menu if open
      document.getElementById('mobile-menu-overlay')?.classList.add('hidden');
    };

    // Close search
    const closeSearch = () => {
      searchPopup.classList.add('hidden');
      document.body.style.overflow = '';
      if (searchInput) searchInput.value = '';
    };

    // Event listeners
    headerSearchBtn?.addEventListener('click', openSearch);
    mobileMenuSearchBtn?.addEventListener('click', openSearch);
    closeBtn?.addEventListener('click', closeSearch);
    searchBackdrop?.addEventListener('click', closeSearch);

    // Close on escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !searchPopup.classList.contains('hidden')) {
        closeSearch();
      }

      // Open with "/" key
      if (e.key === '/' && !searchPopup.classList.contains('hidden') === false) {
        e.preventDefault();
        openSearch();
      }
    });

    // Simple search functionality (integrate with your search implementation)
    searchInput?.addEventListener('input', (e) => {
      const query = (e.target as HTMLInputElement).value.trim();
      const resultsContainer = document.getElementById('search-results-container');

      if (!resultsContainer) return;

      if (query.length < 2) {
        // Show empty state
        resultsContainer.innerHTML = `
          <div class="text-center py-12">
            <svg class="w-16 h-16 mx-auto mb-4 text-gray-300 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <p class="text-gray-500 dark:text-gray-400 text-lg mb-2">Start typing to search</p>
            <p class="text-gray-400 dark:text-gray-500 text-sm">
              Search for stories, destinations, or tags
            </p>
          </div>
        `;
      } else {
        // Show loading or results
        resultsContainer.innerHTML = `
          <div class="text-center py-8">
            <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-orange-500"></div>
            <p class="text-gray-500 dark:text-gray-400 mt-4">Searching...</p>
          </div>
        `;

        // TODO: Implement actual search with Fuse.js or your search solution
        // For now, just show loading state
      }
    });
  }

  // Initialize
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initMobileSearch);
  } else {
    initMobileSearch();
  }

  document.addEventListener('astro:page-load', initMobileSearch);
</script>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .animate-fade-in {
    animation: fade-in 0.2s ease-out;
  }

  /* Line clamp utility */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Custom code tag styling */
  code {
    font-family: ui-monospace, SFMono-Regular, 'SF Mono', Menlo, Consolas, 'Liberation Mono', monospace;
  }
</style>
