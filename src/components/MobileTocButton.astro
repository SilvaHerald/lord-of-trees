---
import { defaultLang, useTranslations, type Language } from '@libs/i18n/config';

export interface Props {
  lang?: Language;
}

const { lang = defaultLang } = Astro.props;

// Filter headings to only show h2 and h3

const t = useTranslations(lang);
---

<!-- Mobile TOC Button -->
<button
  id="toc-toggle-mobile"
  class="fixed bottom-4 right-4 z-40 flex items-center gap-2 rounded-full
         bg-slate-900/90 text-slate-100 px-4 py-2 text-xs shadow-lg
         backdrop-blur-md lg:hidden opacity-80"
>
  <!-- icon (list) -->
  <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
      d="M4 6h16M4 12h16M4 18h10" />
  </svg>
  <span>{t('post.chapters')}</span>
</button>
