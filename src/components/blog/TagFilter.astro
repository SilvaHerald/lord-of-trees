---
export interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

<div class="relative">
  <select
    class="block w-full appearance-none rounded-lg border border-slate-300 bg-white px-3 py-2 text-slate-900 focus:border-transparent focus:ring-2 focus:ring-blue-500 focus:outline-none dark:border-slate-600 dark:bg-slate-800 dark:text-white"
  >
    <option value="">All Topics</option>
    {tags.map(tag => <option value={tag}>{tag}</option>)}
  </select>
  <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2">
    <svg class="h-4 w-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"
      ></path>
    </svg>
  </div>
</div>
