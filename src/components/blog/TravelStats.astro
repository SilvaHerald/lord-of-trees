---
import { useTranslations, type Language } from '../../libs/i18n/config';

export interface Props {
  lang?: Language
  countries: number;
  destinations: number;
  stories: number;
}

const { lang = 'en', countries, destinations, stories } = Astro.props;

const t = useTranslations(lang);
---

<div class="mb-8 flex items-center justify-center gap-8 md:gap-12">
  <div class="text-center">
    <div class="mb-1 text-3xl font-bold text-slate-900 md:text-4xl dark:text-white">
      {countries}
    </div>
    <div class="text-sm font-medium text-slate-600 md:text-base dark:text-slate-400">{t('stats.countries')}</div>
  </div>

  <div class="h-12 w-px bg-slate-300 dark:bg-slate-600"></div>

  <div class="text-center">
    <div class="mb-1 text-3xl font-bold text-slate-900 md:text-4xl dark:text-white">
      {destinations}
    </div>
    <div class="text-sm font-medium text-slate-600 md:text-base dark:text-slate-400">
      {t('stats.destinations')}
    </div>
  </div>

  <div class="h-12 w-px bg-slate-300 dark:bg-slate-600"></div>

  <div class="text-center">
    <div class="mb-1 text-3xl font-bold text-slate-900 md:text-4xl dark:text-white">
      {stories}
    </div>
    <div class="text-sm font-medium text-slate-600 md:text-base dark:text-slate-400">{t('stats.stories')}</div>
  </div>
</div>
