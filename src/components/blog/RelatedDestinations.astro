---
import type { CollectionEntry } from 'astro:content';
import { useTranslations, type Language } from '@libs/i18n/config';

export interface Props {
  lang?: Language;
  posts: CollectionEntry<'blog'>[];
}

const { lang = 'en', posts } = Astro.props;

const t = useTranslations(lang);
---

<div
  class="rounded-xl border border-slate-200 bg-white p-6 shadow-sm dark:border-slate-700 dark:bg-slate-800"
>
  <h3 class="mb-6 flex items-center font-semibold text-slate-900 dark:text-white">
    <svg
      class="mr-2 h-5 w-5 text-amber-600 dark:text-amber-400"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
      ></path>
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
    </svg>
    {t('post.relatedTitle')}
  </h3>

  <div class="space-y-4">
    {
      posts.map(post => (
        <article class="group">
          <a
            href={`/blog/${post.slug}`}
            class="block rounded-lg border border-transparent p-4 transition-colors hover:border-amber-200 hover:bg-amber-50 dark:hover:border-slate-600 dark:hover:bg-slate-700"
          >
            <div class="flex gap-4">
              {/* Thumbnail */}
              {post.data.coverImage && (
                <div class="flex-shrink-0">
                  <img
                    src={post.data.coverImage}
                    alt={post.data.title}
                    class="h-16 w-16 rounded-lg object-cover transition-transform duration-200 group-hover:scale-105"
                  />
                </div>
              )}

              <div class="min-w-0 flex-1">
                <h4 class="mb-2 line-clamp-2 text-sm leading-snug font-medium text-slate-900 group-hover:text-amber-600 dark:text-white dark:group-hover:text-amber-400">
                  {post.data.title}
                </h4>

                {/* Destinations */}
                {post.data.destinations && post.data.destinations.length > 0 && (
                  <div class="mb-2 flex items-center">
                    <svg
                      class="mr-1 h-3 w-3 text-slate-400"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                      />
                    </svg>
                    <span class="truncate text-xs text-slate-500 dark:text-slate-400">
                      {post.data.destinations.slice(0, 2).join(', ')}
                      {post.data.destinations.length > 2 &&
                        ` +${post.data.destinations.length - 2} more`}
                    </span>
                  </div>
                )}

                <div class="flex items-center justify-between text-xs text-slate-500 dark:text-slate-400">
                  <time datetime={post.data.publishDate.toISOString()}>
                    {post.data.publishDate.toLocaleDateString('en-US', {
                      month: 'short',
                      day: 'numeric',
                      year: 'numeric',
                    })}
                  </time>

                  {post.data.duration && (
                    <span class="flex items-center">
                      <svg
                        class="mr-1 h-3 w-3"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                        />
                      </svg>
                      {post.data.duration}
                    </span>
                  )}
                </div>

                {/* Trip type badge */}
                {post.data.tripType && (
                  <div class="mt-2">
                    <span class="inline-block rounded-full bg-amber-100 px-2 py-1 text-xs font-medium text-amber-700 dark:bg-amber-900/30 dark:text-amber-300">
                      {post.data.tripType}
                    </span>
                  </div>
                )}
              </div>
            </div>
          </a>
        </article>
      ))
    }
  </div>

  {/* View all link */}
  <div class="mt-6 border-t border-slate-200 pt-4 dark:border-slate-700">
    <a
      href="/blog"
      class="group flex w-full items-center justify-center rounded-lg bg-amber-50 px-4 py-2 text-sm font-medium text-amber-700 transition-colors hover:bg-amber-100 dark:bg-amber-900/20 dark:text-amber-300 dark:hover:bg-amber-900/30"
    >
      <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
      </svg>
      {t('related.exploreAll')}
      <svg
        class="ml-2 h-4 w-4 transition-transform group-hover:translate-x-1"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"
        ></path>
      </svg>
    </a>
  </div>
</div>
