---
import { useTranslations, type Language } from '@libs/i18n/config';

export interface Props {
  lang?: Language;
  title: string;
}

const { lang = 'en', title } = Astro.props;
const currentUrl = Astro.url.toString();

const t = useTranslations(lang);
---

<div class="flex items-center justify-between">
  <h3 class="flex items-center font-semibold text-slate-900 dark:text-white">
    <svg
      class="mr-2 h-5 w-5 text-amber-600 dark:text-amber-400"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"
      ></path>
    </svg>
    {t('post.share')}
  </h3>

  <div class="flex items-center space-x-3">
    <a
      href={`https://twitter.com/intent/tweet?text=Just read this amazing travel story: ${encodeURIComponent(title)}&url=${encodeURIComponent(currentUrl)}&hashtags=travel,adventure`}
      target="_blank"
      rel="noopener noreferrer"
      class="flex h-10 w-10 transform items-center justify-center rounded-full bg-gradient-to-br from-blue-400 to-blue-600 text-white shadow-lg transition-colors hover:scale-105 hover:from-blue-500 hover:to-blue-700 hover:shadow-xl"
      aria-label="Share on Twitter"
    >
      <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
        <path
          d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
        ></path>
      </svg>
    </a>

    <a
      href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(currentUrl)}`}
      target="_blank"
      rel="noopener noreferrer"
      class="flex h-10 w-10 transform items-center justify-center rounded-full bg-gradient-to-br from-blue-600 to-blue-800 text-white shadow-lg transition-colors hover:scale-105 hover:from-blue-700 hover:to-blue-900 hover:shadow-xl"
      aria-label="Share on Facebook"
    >
      <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
        <path
          d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
        ></path>
      </svg>
    </a>

    <a
      href={`https://www.pinterest.com/pin/create/button/?url=${encodeURIComponent(currentUrl)}&description=${encodeURIComponent(title)}`}
      target="_blank"
      rel="noopener noreferrer"
      class="flex h-10 w-10 transform items-center justify-center rounded-full bg-gradient-to-br from-red-500 to-red-700 text-white shadow-lg transition-colors hover:scale-105 hover:from-red-600 hover:to-red-800 hover:shadow-xl"
      aria-label="Share on Pinterest"
    >
      <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
        <path
          d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.024-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.741.099.12.112.225.083.402-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.402.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.357-.629-2.746-1.378l-.747 2.848c-.269 1.045-1.004 2.352-1.498 3.146 1.123.345 2.306.535 3.55.535 6.624 0 11.99-5.367 11.99-11.987C24.007 5.367 18.641.001 12.017.001z"
        ></path>
      </svg>
    </a>

    <button
      onclick="copyToClipboard(event)"
      class="flex h-10 w-10 transform items-center justify-center rounded-full bg-gradient-to-br from-amber-500 to-orange-500 text-white shadow-lg transition-colors hover:scale-105 hover:from-amber-600 hover:to-orange-600 hover:shadow-xl"
      aria-label="Copy link"
    >
      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
        ></path>
      </svg>
    </button>
  </div>
</div>

<script>
  function copyToClipboard(event: Event) {
    navigator.clipboard.writeText(window.location.href).then(() => {
      const button = (event.target as HTMLElement).closest('button');
      if (button) {
        const originalContent = button.innerHTML;
        button.innerHTML =
          '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>';
        setTimeout(() => {
          button.innerHTML = originalContent;
        }, 2000);
      }
    });
  }
</script>
