---
import { defaultLang, useTranslations, type Language } from '@libs/i18n/config';
import { secureRandomInt } from '@utils/math';

export interface Props {
  lang?: Language;
  tips: string[];
}

const { lang = defaultLang, tips } = Astro.props;

const t = useTranslations(lang as Language);
---

<div
  class="rounded-xl border border-blue-200 bg-gradient-to-br from-blue-50 to-cyan-50 p-6 dark:border-slate-600 dark:from-slate-800 dark:to-slate-700"
>
  <h3 class="mb-3 flex items-center font-semibold text-slate-900 dark:text-white">
    <svg
      class="mr-2 h-5 w-5 text-blue-600 dark:text-blue-400"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
      ></path>
    </svg>
    {t('post.travelTip')}
  </h3>
  <p class="text-sm text-slate-700 italic dark:text-slate-300">
    {tips[secureRandomInt(0, tips.length - 1)]}
  </p>
</div>
