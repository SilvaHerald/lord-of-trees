---
import { useTranslations, type Language } from '@libs/i18n/config';

export interface Props {
  lang?: Language;
}

const { lang = 'en' } = Astro.props;

const t = useTranslations(lang);

---

<div class="relative max-w-md flex-1">
  <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-4">
    <svg class="h-5 w-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
    </svg>
  </div>
  <input
    type="search"
    id="travel-search"
    placeholder={t('hero.search')}
    class="block w-full rounded-full border border-white/20 bg-white/10 py-3 pr-4 pl-12 text-slate-900 placeholder-slate-600 backdrop-blur-sm focus:border-transparent focus:bg-white/20 focus:ring-2 focus:ring-amber-500 focus:outline-none dark:text-white dark:placeholder-slate-400"
  />
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const searchInput = document.getElementById('travel-search');

    if (searchInput) {
      searchInput.addEventListener('input', e => {
        const target = e.target as HTMLInputElement;
        const query = target.value.toLowerCase();
        // Implement travel-specific search functionality here
        console.log('Searching travel stories for:', query);
      });
    }
  });
</script>
