---
import type { CollectionEntry } from 'astro:content';
import BaseLayout from './BaseLayout.astro';
import TravelPostMeta from '@components/blog/TravelPostMeta.astro';
import PhotoGallery from '@components/blog/PhotoGallery.astro';
import TravelTableOfContents from '@components/blog/TravelTableOfContents.astro';
import TravelShareButtons from '@components/blog/TravelShareButtons.astro';
import RelatedDestinations from '@components/blog/RelatedDestinations.astro';
import { useTranslations, type Language } from '@libs/i18n/config';
import type { BlogType } from '@interfaces/blog.interface';
import { secureRandomInt } from '@utils/math-utils';

export interface Props {
  title: string;
  description: string;
  publishDate: Date;
  lang?: Language;
  coverImage?: string;
  destinations?: string[];
  countries?: string[];
  travelDates?: string;
  tripType?: BlogType['tripType'];
  duration?: string;
  budget?: BlogType['budget'];
  photos?: string[];
  headings: any[];
  relatedPosts?: CollectionEntry<'posts'>[];
  mapCoordinates?: { lat: number; lng: number };
  tips: string[];
}

const {
  title,
  description,
  publishDate,
  lang = 'en',
  coverImage,
  destinations,
  countries,
  travelDates,
  tripType,
  duration,
  budget,
  photos,
  headings,
  relatedPosts,
  mapCoordinates,
  tips
} = Astro.props;

const t = useTranslations(lang as Language);
---

<BaseLayout lang={lang as Language}>
  <article
    class="min-h-screen bg-gradient-to-br from-amber-50 via-orange-50 to-red-50 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900"
  >
    <!-- Hero Section -->
    <header class="relative min-h-[60vh] overflow-hidden md:min-h-[80vh]">
      {
        coverImage && (
          <div class="absolute inset-0">
            <img src={coverImage} alt={title} class="h-full w-full object-cover" />
            <div class="absolute inset-0 bg-gradient-to-t from-slate-900/80 via-slate-900/20 to-transparent" />
            <div class="absolute inset-0 bg-gradient-to-br from-amber-900/20 to-orange-900/20" />
          </div>
        )
      }

      <div class="absolute inset-0 flex items-end">
        <div class="mx-auto w-full max-w-4xl px-4 pb-16 sm:px-6 md:pb-24 lg:px-8">
          <!-- Breadcrumb -->
          <nav class="mb-6">
            <ol class="flex items-center space-x-2 text-sm">
              <li>
                <a href=`/${lang}` class="text-white/70 transition-colors hover:text-white">
                  {t('breadcrumb.home')}
                </a>
              </li>
              <li class="text-white/50">
                <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                  <path
                    fill-rule="evenodd"
                    d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
              </li>
              <li>
                <a href=`/${lang}/stories` class="text-white/70 transition-colors hover:text-white">
                  {t('breadcrumb.travelStory')}
                </a>
              </li>
              <li class="text-white/50">
                <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                  <path
                    fill-rule="evenodd"
                    d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
              </li>
              <li class="font-medium text-white">{title}</li>
            </ol>
          </nav>

          <!-- Travel Type Badge -->
          {
            tripType && (
              <div class="mb-6">
                <span class="inline-flex items-center rounded-full bg-white/20 px-4 py-2 text-sm font-medium text-white backdrop-blur-sm">
                  <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"
                    />
                  </svg>
                  {t(`tripType.${tripType}`)}
                </span>
              </div>
            )
          }

          <!-- Article Header -->
          <h1
            class="mb-6 text-4xl leading-tight font-bold text-balance text-white md:text-5xl lg:text-6xl"
          >
            {title}
          </h1>

          <p class="mb-8 max-w-3xl text-lg leading-relaxed text-balance text-white/90 md:text-xl">
            {description}
          </p>

          <TravelPostMeta
            lang={lang as Language}
            publishDate={publishDate}
            destinations={destinations}
            countries={countries}
            travelDates={travelDates}
            duration={duration}
            budget={budget}
            class="text-white"
          />
        </div>
      </div>

      <!-- Scroll indicator -->
      <div class="absolute bottom-4 left-1/2 -translate-x-1/2 transform animate-bounce">
        <svg class="h-6 w-6 text-white/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </div>
    </header>

    <!-- Main Content -->
    <div class="relative z-10 bg-white dark:bg-slate-900">
      <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 md:py-16 lg:px-8">
        <div class="grid gap-12 lg:grid-cols-12">
          <!-- Table of Contents - Desktop -->
          <aside class="hidden lg:col-span-3 lg:block">
            <div class="sticky top-8">
              <TravelTableOfContents lang={lang as Language} headings={headings} />

              <!-- Quick Trip Info -->
              <div
                class="mt-8 rounded-xl border border-amber-200 bg-gradient-to-br from-amber-50 to-orange-50 p-6 dark:border-slate-600 dark:from-slate-800 dark:to-slate-700"
              >
                <h3 class="mb-4 flex items-center font-semibold text-slate-900 dark:text-white">
                  <svg
                    class="mr-2 h-5 w-5 text-amber-600 dark:text-amber-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  {t('post.tripDetails')}
                </h3>

                {
                  destinations && destinations.length > 0 && (
                    <div class="mb-3">
                      <span class="text-sm font-medium text-slate-600 dark:text-slate-400">
                        {t('post.destinations')}:
                      </span>
                      <p class="text-sm text-slate-800 dark:text-slate-200">
                        {destinations.join(', ')}
                      </p>
                    </div>
                  )
                }

                {
                  duration && (
                    <div class="mb-3">
                      <span class="text-sm font-medium text-slate-600 dark:text-slate-400">
                        {t('post.duration')}:
                      </span>
                      <p class="text-sm text-slate-800 dark:text-slate-200">{duration}</p>
                    </div>
                  )
                }

                {
                  travelDates && (
                    <div class="mb-3">
                      <span class="text-sm font-medium text-slate-600 dark:text-slate-400">
                        {t('post.when')}:
                      </span>
                      <p class="text-sm text-slate-800 dark:text-slate-200">{travelDates}</p>
                    </div>
                  )
                }

                {
                  budget && (
                    <div>
                      <span class="text-sm font-medium text-slate-600 dark:text-slate-400">
                        {t('post.budget')}:
                      </span>
                      <p class="text-sm text-slate-800 dark:text-slate-200">{t(`budget.${budget}`)}</p>
                    </div>
                  )
                }
              </div>
            </div>
          </aside>

          <!-- Article Content -->
          <main class="lg:col-span-6">
            <!-- Mobile TOC -->
            <details
              class="mb-8 rounded-xl border border-amber-200 bg-amber-50 p-4 lg:hidden dark:border-slate-700 dark:bg-slate-800"
            >
              <summary
                class="flex cursor-pointer items-center font-semibold text-slate-900 hover:text-amber-600 dark:text-white dark:hover:text-amber-400"
              >
                <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
                </svg>
                {t('post.mobileChapters')}
              </summary>
              <div class="mt-4">
                <TravelTableOfContents lang={lang as Language} headings={headings} />
              </div>
            </details>

            <!-- Photo Gallery -->
            {
              photos && photos.length > 0 && (
                <div class="mb-12">
                  <PhotoGallery lang={lang as Language} photos={photos} />
                </div>
              )
            }

            <!-- Article Body -->
            <div class="prose-travel max-w-none">
              <slot />
            </div>

            <!-- Map Section -->
            {
              mapCoordinates && (
                <div class="mt-12 rounded-xl bg-slate-50 p-6 dark:bg-slate-800">
                  <h3 class="mb-4 flex items-center text-xl font-semibold text-slate-900 dark:text-white">
                    <svg
                      class="mr-2 h-6 w-6 text-amber-600 dark:text-amber-400"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                      />
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                      />
                    </svg>
                    {t('post.map')}
                  </h3>
                  <div class="flex h-64 items-center justify-center rounded-lg bg-slate-200 dark:bg-slate-700">
                    <p class="text-slate-600 dark:text-slate-400">Interactive map would be here</p>
                    <p class="ml-2 text-xs text-slate-500 dark:text-slate-500">
                      ({mapCoordinates.lat}, {mapCoordinates.lng})
                    </p>
                  </div>
                </div>
              )
            }

            <!-- Share Buttons -->
            <div class="mt-16 border-t border-slate-200 pt-8 dark:border-slate-700">
              <TravelShareButtons lang={lang as Language} title={title} />
            </div>

            <!-- Author Bio -->
            <div
              class="mt-12 rounded-2xl bg-gradient-to-br from-amber-50 via-orange-50 to-red-50 p-8 dark:from-slate-800 dark:to-slate-700"
            >
              <div class="flex items-start space-x-6">
                <div class="flex-shrink-0">
                  <img
                    src="/images/travel-author-avatar.jpg"
                    alt="Travel Author"
                    class="h-20 w-20 rounded-full object-cover shadow-lg ring-4 ring-white dark:ring-slate-600"
                  />
                </div>
                <div class="flex-1">
                  <h3 class="mb-2 text-xl font-bold text-slate-900 dark:text-white">
                    {t('post.about')}
                  </h3>
                  <p class="mb-4 leading-relaxed text-slate-700 dark:text-slate-700">
                    {t('post.aboutDescription')}
                  </p>
                  <div class="flex flex-wrap gap-3">
                    <a
                      href="/about"
                      class="inline-flex items-center rounded-full bg-amber-100 px-4 py-2 text-sm font-medium text-amber-700 transition-colors hover:bg-amber-200 dark:bg-amber-700/90 dark:text-white dark:hover:bg-amber-600"
                    >
                      <svg
                        class="mr-2 h-4 w-4"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                        ></path>
                      </svg>
                      {t('post.myStory')}
                    </a>
                    <a
                      href="/contact"
                      class="inline-flex items-center rounded-full border border-slate-300 bg-white px-4 py-2 text-sm font-medium text-slate-700 transition-colors hover:bg-slate-50 dark:border-slate-600 dark:bg-slate-800 dark:text-slate-300 dark:hover:bg-slate-700"
                    >
                      <svg
                        class="mr-2 h-4 w-4"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
                        ></path>
                      </svg>
                      {t('post.letsChat')}
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </main>

          <!-- Sidebar -->
          <aside class="lg:col-span-3">
            <div class="sticky top-8 space-y-8">
              <!-- Reading Progress -->
              <div
                class="rounded-xl border border-slate-200 bg-white p-6 shadow-sm dark:border-slate-700 dark:bg-slate-800"
              >
                <h3 class="mb-4 flex items-center font-semibold text-slate-900 dark:text-white">
                  <svg
                    class="mr-2 h-5 w-5 text-amber-600 dark:text-amber-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  {t('post.readingProgress')}
                </h3>
                <div class="h-2 w-full rounded-full bg-slate-200 dark:bg-slate-700">
                  <div
                    id="reading-progress"
                    class="h-2 rounded-full bg-gradient-to-r from-amber-500 to-orange-500 transition-all duration-300"
                    style="width: 0%"
                  >
                  </div>
                </div>
              </div>

              <!-- Related Destinations -->
              {
                relatedPosts && relatedPosts.length > 0 && (
                  <RelatedDestinations lang={lang as Language} posts={relatedPosts} />
                )
              }

              <!-- Newsletter CTA -->
              <div
                class="rounded-xl border border-amber-200 bg-gradient-to-br from-amber-100 to-orange-100 p-6 dark:border-slate-600 dark:from-slate-800 dark:to-slate-700"
              >
                <div class="text-center">
                  <div
                    class="mx-auto mb-4 flex h-12 w-12 items-center justify-center rounded-full bg-gradient-to-br from-amber-500 to-orange-500"
                  >
                    <svg
                      class="h-6 w-6 text-white"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                      ></path>
                    </svg>
                  </div>
                  <h3 class="mb-2 font-semibold text-slate-900 dark:text-white">
                    {t('post.newsletter')}
                  </h3>
                  <p class="mb-4 text-sm text-slate-600 dark:text-slate-300">
                    {t('post.newsletterText')}
                  </p>
                  <form class="space-y-3">
                    <input
                      type="email"
                      placeholder=`${t('newsletter.email')}`
                      class="w-full rounded-lg border border-amber-300 px-3 py-2 text-sm focus:ring-2 focus:ring-amber-500 focus:outline-none dark:border-slate-600 dark:bg-slate-700 dark:text-white"
                    />
                    <button
                      type="submit"
                      class="w-full rounded-lg bg-gradient-to-r from-amber-600 to-orange-600 px-3 py-2 text-sm font-medium text-white transition-colors hover:from-amber-700 hover:to-orange-700 focus:ring-2 focus:ring-amber-500 focus:ring-offset-2 focus:outline-none"
                    >
                      {t('newsletter.button')}
                    </button>
                  </form>
                </div>
              </div>

              <!-- Random Travel Tip -->
              <div
                class="rounded-xl border border-blue-200 bg-gradient-to-br from-blue-50 to-cyan-50 p-6 dark:border-slate-600 dark:from-slate-800 dark:to-slate-700"
              >
                <h3 class="mb-3 flex items-center font-semibold text-slate-900 dark:text-white">
                  <svg
                    class="mr-2 h-5 w-5 text-blue-600 dark:text-blue-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                    ></path>
                  </svg>
                  {t('post.travelTip')}
                </h3>
                <p class="text-sm text-slate-700 italic dark:text-slate-300">
                  {tips[secureRandomInt(0, tips.length - 1)]}
                </p>
              </div>
            </div>
          </aside>
        </div>
      </div>
    </div>
  </article>
</BaseLayout>

<script>
  // Reading progress indicator
  function updateReadingProgress() {
    const article = document.querySelector('main');
    const progressBar = document.getElementById('reading-progress');

    if (!article || !progressBar) return;

    const articleHeight = article.offsetHeight;
    const articleTop = article.offsetTop;
    const scrollPosition = window.scrollY;
    const windowHeight = window.innerHeight;

    const progress = Math.min(
      Math.max((scrollPosition - articleTop + windowHeight) / articleHeight, 0),
      1
    );

    progressBar.style.width = `${progress * 100}%`;
  }

  window.addEventListener('scroll', updateReadingProgress);
  window.addEventListener('resize', updateReadingProgress);

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', updateReadingProgress);

  // Smooth scroll for internal links
  document.addEventListener('DOMContentLoaded', () => {
    const links = document.querySelectorAll('a[href^="#"]');

    links.forEach(link => {
      link.addEventListener('click', e => {
        e.preventDefault();
        const target = document.querySelector(link.getAttribute('href')!);

        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start',
          });
        }
      });
    });
  });
</script>
