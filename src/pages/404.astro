---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { defaultLang, useTranslations, getLangFromUrl, type Language } from '@libs/i18n/config';
import { getImageUrl } from '@utils/image';

// Detect language from URL or use default
const currentLang = getLangFromUrl(Astro.url) || defaultLang;
const t = useTranslations(currentLang);

// Get random posts in the current language
const allPosts = await getCollection('posts');
const langPosts = allPosts.filter(post => !post.data.draft && post.data.lang === currentLang);
const randomPosts = langPosts.sort(() => Math.random() - 0.5).slice(0, 3);

// Language-specific paths
const homePath = currentLang === defaultLang ? '/' : `/${currentLang}`;
const blogPath = currentLang === defaultLang ? '/stories' : `/${currentLang}/stories`;
---

<BaseLayout
  title={t('404.pageTitle')}
  description={t('404.pageDescription')}
  lang={currentLang}
>
  <main
    class="flex min-h-screen items-center justify-center bg-gradient-to-br from-amber-50 via-orange-50 to-red-50 px-4 py-20 sm:px-6 lg:px-8 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900"
  >
    <div class="w-full max-w-4xl text-center">
      <!-- Lost Traveler Illustration -->
      <div class="mb-8 flex justify-center">
        <div class="relative">
          <!-- Main compass circle -->
          <div
            class="animate-float flex h-48 w-48 items-center justify-center rounded-full bg-gradient-to-br from-amber-500 to-orange-500 shadow-2xl md:h-64 md:w-64"
          >
            <!-- Compass needle -->
            <div class="absolute h-32 w-32 md:h-40 md:w-40">
              <svg
                class="animate-spin-slow h-full w-full text-white"
                style="animation-duration: 8s;"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"
                ></path>
              </svg>
            </div>
            <!-- Center dot -->
            <div class="absolute h-6 w-6 rounded-full bg-white shadow-lg"></div>
          </div>

          <!-- Floating question marks -->
          <div class="absolute -top-4 -right-4 animate-bounce text-4xl md:text-6xl">
            <span class="text-amber-600 dark:text-amber-400">?</span>
          </div>
          <div
            class="absolute -bottom-4 -left-4 animate-bounce text-3xl md:text-5xl"
            style="animation-delay: 0.2s;"
          >
            <span class="text-orange-600 dark:text-orange-400">?</span>
          </div>
        </div>
      </div>

      <!-- Error Code -->
      <div class="mb-6">
        <h1
          class="animate-fade-in mb-4 bg-gradient-to-r from-amber-600 via-orange-600 to-red-600 bg-clip-text text-8xl font-bold text-transparent md:text-9xl"
        >
          404
        </h1>
        <div
          class="flex items-center justify-center space-x-2 text-lg text-slate-600 dark:text-slate-400"
        >
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
            ></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          <span class="font-medium">{t('404.location')}</span>
        </div>
      </div>

      <!-- Main Message -->
      <h2
        class="animate-slide-up mb-4 font-serif text-3xl font-bold text-slate-900 md:text-5xl dark:text-white"
      >
        {t('404.heading')}
      </h2>

      <p
        class="animate-slide-up mx-auto mb-8 max-w-2xl text-lg text-slate-600 md:text-xl dark:text-slate-300"
        style="animation-delay: 0.1s;"
      >
        {t('404.message')}
      </p>

      <!-- Action Buttons -->
      <div
        class="animate-slide-up mb-16 flex flex-col justify-center gap-4 sm:flex-row"
        style="animation-delay: 0.2s;"
      >
        <a
          href={homePath}
          class="inline-flex transform items-center justify-center rounded-full bg-gradient-to-r from-amber-600 to-orange-600 px-8 py-4 text-base font-medium text-white shadow-lg transition-all duration-200 hover:scale-105 hover:from-amber-700 hover:to-orange-700 hover:shadow-xl"
        >
          <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
            ></path>
          </svg>
          {t('404.homeButton')}
        </a>

        <a
          href={blogPath}
          class="inline-flex transform items-center justify-center rounded-full border-2 border-amber-200 bg-white px-8 py-4 text-base font-medium text-amber-700 shadow-md transition-all duration-200 hover:scale-105 hover:bg-amber-50 hover:shadow-lg dark:border-slate-600 dark:bg-slate-800 dark:text-amber-300 dark:hover:bg-slate-700"
        >
          <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
            ></path>
          </svg>
          {t('404.storiesButton')}
        </a>
      </div>

      <!-- Search Box -->
      <div class="animate-slide-up mx-auto mb-16 max-w-xl" style="animation-delay: 0.3s;">
        <div class="relative">
          <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-4">
            <svg
              class="h-5 w-5 text-slate-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
          <input
            type="search"
            id="404-search"
            placeholder={t('404.searchPlaceholder')}
            class="block w-full rounded-full border-2 border-slate-200 bg-white py-4 pr-4 pl-12 text-slate-900 shadow-md transition-all focus:border-amber-500 focus:ring-4 focus:ring-amber-500/20 focus:outline-none dark:border-slate-700 dark:bg-slate-800 dark:text-white"
          />
        </div>
      </div>

      <!-- Suggested Posts -->
      {
        randomPosts.length > 0 && (
          <div class="animate-slide-up" style="animation-delay: 0.4s;">
            <h3 class="mb-8 flex items-center justify-center text-2xl font-bold text-slate-900 dark:text-white">
              <svg
                class="mr-2 h-6 w-6 text-amber-600 dark:text-amber-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"
                />
              </svg>
              {t('404.suggestedPosts')}
            </h3>

            <div class="grid gap-6 md:grid-cols-3">
              {randomPosts.map(post => {
                const postSlug = post.slug.replace(`${currentLang}/`, '');
                const postPath =
                  currentLang === defaultLang
                    ? `/stories/${postSlug}`
                    : `/${currentLang}/stories/${postSlug}`;

                return (
                  <a
                    href={postPath}
                    class="group transform overflow-hidden rounded-xl border border-slate-200 bg-white shadow-lg transition-all duration-300 hover:scale-105 hover:shadow-2xl dark:border-slate-700 dark:bg-slate-800"
                  >
                    {post.data.coverImage && (
                      <div class="aspect-video overflow-hidden bg-slate-200 dark:bg-slate-700">
                        <img
                          src={getImageUrl(post.data.coverImage)}
                          alt={post.data.title}
                          class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
                        />
                      </div>
                    )}

                    <div class="p-6">
                      <div class="mb-2 flex items-center text-xs font-medium text-amber-600 dark:text-amber-400">
                        <svg
                          class="mr-1 h-3 w-3"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                          />
                        </svg>
                        {`${post.data.province}, ${post.data.country}`}
                      </div>

                      <h4 class="mb-2 line-clamp-2 font-bold text-slate-900 transition-colors group-hover:text-amber-600 dark:text-white dark:group-hover:text-amber-400">
                        {post.data.title}
                      </h4>

                      <p class="line-clamp-2 text-sm text-slate-600 dark:text-slate-300">
                        {post.data.description}
                      </p>
                    </div>
                  </a>
                );
              })}
            </div>
          </div>
        )
      }

      <!-- Fun Travel Fact -->
      <div
        class="animate-slide-up mt-16 rounded-2xl border-2 border-amber-200 bg-gradient-to-r from-amber-100 to-orange-100 p-6 dark:border-amber-800 dark:from-amber-900/20 dark:to-orange-900/20"
        style="animation-delay: 0.5s;"
      >
        <div class="flex items-start space-x-3">
          <div class="flex-shrink-0">
            <svg
              class="h-6 w-6 text-amber-600 dark:text-amber-400"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
              ></path>
            </svg>
          </div>
          <div class="text-left">
            <h4 class="mb-1 font-semibold text-slate-900 dark:text-white">{t('404.factTitle')}</h4>
            <p class="text-sm text-slate-700 dark:text-slate-300">
              {t('404.fact')}
            </p>
          </div>
        </div>
      </div>

      <!-- Footer Links -->
      <div
        class="animate-slide-up mt-12 border-t border-slate-200 pt-8 dark:border-slate-700"
        style="animation-delay: 0.6s;"
      >
        <p class="mb-4 text-slate-600 dark:text-slate-400">
          {t('404.exploreByCategory')}
        </p>
        <div class="flex flex-wrap justify-center gap-3">
          <a
            href={`${blogPath}?tag=adventure`}
            class="rounded-full bg-amber-100 px-4 py-2 text-sm font-medium text-amber-700 transition-colors hover:bg-amber-200 dark:bg-amber-900/30 dark:text-amber-300 dark:hover:bg-amber-900/50"
          >
            üèîÔ∏è {t('tripType.adventure')}
          </a>
          <a
            href={`${blogPath}?tag=cultural`}
            class="rounded-full bg-amber-100 px-4 py-2 text-sm font-medium text-amber-700 transition-colors hover:bg-amber-200 dark:bg-amber-900/30 dark:text-amber-300 dark:hover:bg-amber-900/50"
          >
            üèõÔ∏è {t('tripType.cultural')}
          </a>
          <a
            href={`${blogPath}?tag=food`}
            class="rounded-full bg-amber-100 px-4 py-2 text-sm font-medium text-amber-700 transition-colors hover:bg-amber-200 dark:bg-amber-900/30 dark:text-amber-300 dark:hover:bg-amber-900/50"
          >
            üçú {t('tripType.food')}
          </a>
          <a
            href={`${blogPath}?tag=nature`}
            class="rounded-full bg-amber-100 px-4 py-2 text-sm font-medium text-amber-700 transition-colors hover:bg-amber-200 dark:bg-amber-900/30 dark:text-amber-300 dark:hover:bg-amber-900/50"
          >
            üåø {t('tripType.nature')}
          </a>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  @keyframes spin-slow {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  .animate-spin-slow {
    animation: spin-slow 8s linear infinite;
  }
</style>

<script>
  // Search functionality on 404 page
  document.addEventListener('DOMContentLoaded', () => {
    const searchInput = document.getElementById('404-search');

    if (searchInput) {
      searchInput.addEventListener('keypress', e => {
        if (e.key === 'Enter') {
          const target = e.target as HTMLInputElement;
          const query = target.value.trim();
          if (query) {
            // Get current language from URL
            const pathSegments = window.location.pathname.split('/').filter(Boolean);
            const possibleLang = pathSegments[0];
            const supportedLangs = ['vi', 'en'];
            const isLangInUrl = supportedLangs.includes(possibleLang);

            // Build search URL with language
            const searchPath = isLangInUrl
              ? `/${possibleLang}/blog?search=${encodeURIComponent(query)}`
              : `/blog?search=${encodeURIComponent(query)}`;

            window.location.href = searchPath;
          }
        }
      });
    }
  });
</script>
