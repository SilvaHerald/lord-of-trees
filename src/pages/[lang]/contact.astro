---
import BaseLayout from '@layouts/BaseLayout.astro';
import { languages, useTranslations, type Language } from '@libs/i18n/config';

export async function getStaticPaths() {
  return Object.keys(languages).flatMap(lang => {
    return {
      params: { lang },
    };
  });
}

const { lang } = Astro.params;

const t = useTranslations(lang as Language);
---

<BaseLayout
  lang={lang as Language}
  title={t('contact.pageTitle')}
  description={t('contact.pageDescription')}
>
  <!-- Hero Section -->
  <section class="relative flex h-[50vh] min-h-[350px] items-center justify-center overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
      <img
        src="/images/travel-hero-bg.jpg"
        alt="Travel background"
        class="h-full w-full object-cover opacity-50 dark:opacity-50"
      />
      <div
        class="absolute inset-0 bg-gradient-to-br from-amber-500/20 via-orange-500/20 to-red-500/20 dark:from-slate-900/40 dark:to-slate-800/40"
      >
      </div>
    </div>
    <div class="relative z-10 px-4 text-center">
      <h1 class="mb-4 text-5xl font-bold text-white drop-shadow-lg md:text-6xl">
        {t('contact.hero.title')}
        <span class="text-orange-400">{t('contact.hero.highlight')}</span>
      </h1>
      <p class="mx-auto max-w-2xl text-xl text-white/90 drop-shadow">
        {t('contact.hero.subtitle')}
      </p>
    </div>
  </section>

  <!-- Main Content -->
  <div class="mx-auto max-w-6xl px-4 py-16">
    <div class="grid gap-12 lg:grid-cols-2">
      <!-- Contact Form -->
      <div>
        <h2 class="mb-6 text-3xl font-bold text-gray-900 dark:text-white">
          {t('contact.form.title')}
        </h2>
        <p class="mb-8 text-gray-700 dark:text-gray-300">
          {t('contact.form.description')}
        </p>

        <form class="space-y-6" action="/api/contact" method="POST">
          <!-- Name -->
          <div>
            <label
              for="name"
              class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300"
            >
              {t('contact.form.input1.label')}
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-gray-900 transition-colors focus:border-transparent focus:ring-2 focus:ring-orange-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white"
              placeholder={t('contact.form.input1.placeholder')}
            />
          </div>

          <!-- Email -->
          <div>
            <label
              for="email"
              class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300"
            >
              {t('contact.form.input2.label')}
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-gray-900 transition-colors focus:border-transparent focus:ring-2 focus:ring-orange-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white"
              placeholder={t('contact.form.input2.placeholder')}
            />
          </div>

          <!-- Subject -->
          <div>
            <label
              for="subject"
              class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300"
            >
              {t('contact.form.input3.label')}
            </label>
            <input
              type="text"
              id="subject"
              name="subject"
              required
              class="w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-gray-900 transition-colors focus:border-transparent focus:ring-2 focus:ring-orange-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white"
              placeholder={t('contact.form.input3.placeholder')}
            />
          </div>

          <!-- Message -->
          <div>
            <label
              for="message"
              class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300"
            >
              {t('contact.form.input4.label')}
            </label>
            <textarea
              id="message"
              name="message"
              required
              rows="6"
              class="w-full resize-none rounded-lg border border-gray-300 bg-white px-4 py-3 text-gray-900 transition-colors focus:border-transparent focus:ring-2 focus:ring-orange-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white"
              placeholder={t('contact.form.input4.placeholder')}></textarea>
          </div>

          <!-- Submit Button -->
          <button
            type="submit"
            class="w-full transform rounded-lg bg-gradient-to-r from-orange-500 to-orange-600 px-6 py-4 font-semibold text-white shadow-lg transition-all duration-200 hover:scale-[1.02] hover:from-orange-600 hover:to-orange-700 hover:shadow-xl active:scale-[0.98]"
          >
            {t('contact.form.submitButton')}
          </button>
        </form>
      </div>

      <!-- Contact Info & Social -->
      <div class="space-y-8">
        <!-- Quick Contact Info -->
        <div>
          <h2 class="mb-6 text-3xl font-bold text-gray-900 dark:text-white">
            {t('contact.info.title')}
          </h2>

          <div class="space-y-4">
            <!-- Email -->
            <div class="flex items-start gap-4 rounded-lg bg-white p-4 shadow-md dark:bg-gray-800">
              <div class="mt-1 text-orange-500">
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="mb-1 font-semibold text-gray-900 dark:text-white">
                  {t('contact.info.email.title')}
                </h3>
                <a
                  href="mailto:hello@lordoftrees.com"
                  class="text-orange-500 transition-colors hover:text-orange-600"
                >
                  {t('contact.info.email.description')}
                </a>
              </div>
            </div>

            <!-- Response Time -->
            <div class="flex items-start gap-4 rounded-lg bg-white p-4 shadow-md dark:bg-gray-800">
              <div class="mt-1 text-orange-500">
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="mb-1 font-semibold text-gray-900 dark:text-white">
                  {t('contact.info.responseTime.title')}
                </h3>
                <p class="text-gray-700 dark:text-gray-300">
                  {t('contact.info.responseTime.description')}
                </p>
              </div>
            </div>

            <!-- Location -->
            <div class="flex items-start gap-4 rounded-lg bg-white p-4 shadow-md dark:bg-gray-800">
              <div class="mt-1 text-orange-500">
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="mb-1 font-semibold text-gray-900 dark:text-white">
                  {t('contact.info.location.title')}
                </h3>
                <p class="text-gray-700 dark:text-gray-300">
                  {t('contact.info.location.description')}
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Social Media -->
        <div>
          <h3 class="mb-4 text-2xl font-bold text-gray-900 dark:text-white">
            {t('contact.info.socialMedia.title')}
          </h3>
          <p class="mb-6 text-gray-700 dark:text-gray-300">
            {t('contact.info.socialMedia.description')}
          </p>

          <div class="grid grid-cols-2 gap-4">
            <!-- Instagram -->
            <a
              href="https://instagram.com"
              target="_blank"
              rel="noopener noreferrer"
              class="flex transform items-center gap-3 rounded-lg bg-gradient-to-br from-purple-500 to-pink-500 p-4 text-white shadow-lg transition-all hover:scale-105 hover:from-purple-600 hover:to-pink-600"
            >
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                ></path>
              </svg>
              <span class="font-semibold">Instagram</span>
            </a>

            <!-- Twitter/X -->
            <a
              href="https://twitter.com"
              target="_blank"
              rel="noopener noreferrer"
              class="flex transform items-center gap-3 rounded-lg bg-gradient-to-br from-blue-400 to-blue-600 p-4 text-white shadow-lg transition-all hover:scale-105 hover:from-blue-500 hover:to-blue-700"
            >
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                ></path>
              </svg>
              <span class="font-semibold">Twitter</span>
            </a>

            <!-- YouTube -->
            <a
              href="https://youtube.com"
              target="_blank"
              rel="noopener noreferrer"
              class="flex transform items-center gap-3 rounded-lg bg-gradient-to-br from-red-500 to-red-600 p-4 text-white shadow-lg transition-all hover:scale-105 hover:from-red-600 hover:to-red-700"
            >
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
                ></path>
              </svg>
              <span class="font-semibold">YouTube</span>
            </a>

            <!-- TikTok -->
            <a
              href="https://tiktok.com"
              target="_blank"
              rel="noopener noreferrer"
              class="flex transform items-center gap-3 rounded-lg bg-gradient-to-br from-gray-800 to-gray-900 p-4 text-white shadow-lg transition-all hover:scale-105 hover:from-gray-900 hover:to-black"
            >
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"
                ></path>
              </svg>
              <span class="font-semibold">TikTok</span>
            </a>
          </div>
        </div>

        <!-- FAQ Section -->
        <div
          class="rounded-xl bg-gradient-to-br from-orange-50 to-blue-50 p-6 dark:from-gray-800 dark:to-gray-900"
        >
          <h3 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">
            {t('contact.info.faq.title')}
          </h3>
          <div class="space-y-3 text-sm">
            <p class="text-gray-700 dark:text-gray-300">
              <strong>{t('contact.info.faq.question1.highlight')}</strong>
              {t('contact.info.faq.question1.text')}
            </p>
            <p class="text-gray-700 dark:text-gray-300">
              <strong>{t('contact.info.faq.question2.highlight')}</strong>
              {t('contact.info.faq.question2.text')}
            </p>
            <p class="text-gray-700 dark:text-gray-300">
              <strong>{t('contact.info.faq.question3.highlight')}</strong>
              {t('contact.info.faq.question3.text')}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
