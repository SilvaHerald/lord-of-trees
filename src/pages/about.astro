---
import AnimatedCounter from '@components/AnimatedCounter.astro';
import BaseLayout from '@layouts/BaseLayout.astro';
import { defaultLang, useTranslations } from '@libs/i18n/config';
import { getImageUrl } from '@utils/image';

const t = useTranslations(defaultLang);
---

<BaseLayout
  lang={defaultLang}
  title={t('about.pageTitle')}
  description={t('about.pageDescription')}
>
  <!-- Hero Section -->
  <section class="relative flex h-[60vh] min-h-[400px] items-center justify-center overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
      <img
        src={getImageUrl('/demo/travel-hero-bg.jpg')}
        alt="Travel background"
        class="h-full w-full object-cover opacity-50 dark:opacity-50"
      />
      <div
        class="absolute inset-0 bg-gradient-to-br from-amber-500/20 via-orange-500/20 to-red-500/20 dark:from-slate-900/40 dark:to-slate-800/40"
      >
      </div>
    </div>
    <div class="relative z-10 px-4 text-center">
      <div
        class="mb-6 inline-block rounded-full bg-white/90 p-4 backdrop-blur-sm dark:bg-gray-800/90"
      >
        <svg class="h-16 w-16 text-orange-500" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"
          ></path>
        </svg>
      </div>
      <h1 class="mb-4 text-5xl font-bold text-gray-900 md:text-6xl dark:text-white">
        {t('about.hero.title')}
        <span class="text-orange-500">{t('about.hero.highlight')}</span>
      </h1>
      <p class="mx-auto max-w-2xl text-xl text-gray-700 dark:text-gray-300">
        {t('about.hero.subTitle')}
      </p>
    </div>
  </section>

  <!-- Main Content -->
  <div class="mx-auto max-w-5xl px-4 py-16">
    <!-- Introduction -->
    <div class="mb-16">
      <div class="mb-12 flex flex-col items-center gap-8 md:flex-row">
        <div class="md:w-1/3">
          <img
            src={getImageUrl('avatars/travel-author-avatar.jpg')}
            alt="Travel blogger portrait"
            class="aspect-square w-full rounded-2xl object-cover shadow-2xl"
          />
        </div>
        <div class="md:w-2/3">
          <h2 class="mb-4 text-3xl font-bold text-gray-900 dark:text-white">
            {t('about.intro.greeting')}
          </h2>
          <p class="mb-4 text-lg text-gray-700 dark:text-gray-300">
            {t('about.intro.text1')}
          </p>
          <p class="text-lg text-gray-700 dark:text-gray-300">
            {t('about.intro.text2')}
          </p>
        </div>
      </div>
    </div>

    <!-- My Story -->
    <div class="mb-16">
      <h2 class="mb-6 text-3xl font-bold text-gray-900 dark:text-white">
        {t('about.story.title')}
      </h2>
      <div class="prose prose-lg dark:prose-invert max-w-none">
        <p class="mb-4 text-gray-700 dark:text-gray-300">
          {t('about.story.text1')}
        </p>
        <p class="mb-4 text-gray-700 dark:text-gray-300">
          {t('about.story.text2')}
        </p>
        <p class="text-gray-700 dark:text-gray-300">
          {t('about.story.text3')}
        </p>
      </div>
    </div>

    <!-- Travel Stats -->
    <div
      class="mb-16 rounded-2xl bg-gradient-to-br from-orange-50 to-blue-50 p-8 dark:from-gray-800 dark:to-gray-900"
    >
      <h2 class="mb-8 text-center text-3xl font-bold text-gray-900 dark:text-white">
        {t('about.travelStats.title')}
      </h2>
      <div class="grid grid-cols-2 gap-6 md:grid-cols-4">
        <!-- Countries Visited -->
        <AnimatedCounter
          end={45}
          suffix="+"
          label={t('about.travelStats.countriesVisited')}
          duration={2000}
        />
        <!-- Cities Explored -->
        <AnimatedCounter
          end={150}
          suffix="+"
          label={t('about.travelStats.citiesExplored')}
          duration={2500}
        />
        <!-- Continents -->
        <AnimatedCounter
          end={5}
          suffix=""
          label={t('about.travelStats.continents')}
          duration={1500}
        />
        <!-- Travel Stories -->
        <AnimatedCounter
          end={100}
          suffix="+"
          label={t('about.travelStats.travelStories')}
          duration={2000}
        />
      </div>
    </div>

    <!-- What I Believe -->
    <div class="mb-16">
      <h2 class="mb-6 text-3xl font-bold text-gray-900 dark:text-white">
        {t('about.whatIBelieve.title')}
      </h2>
      <div class="grid gap-6 md:grid-cols-2">
        <div class="rounded-xl bg-white p-6 shadow-lg dark:bg-gray-800">
          <div class="mb-3 text-orange-500">
            <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
          </div>
          <h3 class="mb-2 text-xl font-bold text-gray-900 dark:text-white">
            {t('about.whatIBelieve.first.title')}
          </h3>
          <p class="text-gray-700 dark:text-gray-300">
            {t('about.whatIBelieve.first.text')}
          </p>
        </div>

        <div class="rounded-xl bg-white p-6 shadow-lg dark:bg-gray-800">
          <div class="mb-3 text-orange-500">
            <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
              ></path>
            </svg>
          </div>
          <h3 class="mb-2 text-xl font-bold text-gray-900 dark:text-white">
            {t('about.whatIBelieve.second.title')}
          </h3>
          <p class="text-gray-700 dark:text-gray-300">
            {t('about.whatIBelieve.second.text')}
          </p>
        </div>

        <div class="rounded-xl bg-white p-6 shadow-lg dark:bg-gray-800">
          <div class="mb-3 text-orange-500">
            <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
          </div>
          <h3 class="mb-2 text-xl font-bold text-gray-900 dark:text-white">
            {t('about.whatIBelieve.third.title')}
          </h3>
          <p class="text-gray-700 dark:text-gray-300">
            {t('about.whatIBelieve.third.text')}
          </p>
        </div>

        <div class="rounded-xl bg-white p-6 shadow-lg dark:bg-gray-800">
          <div class="mb-3 text-orange-500">
            <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
              ></path>
            </svg>
          </div>
          <h3 class="mb-2 text-xl font-bold text-gray-900 dark:text-white">
            {t('about.whatIBelieve.fourth.title')}
          </h3>
          <p class="text-gray-700 dark:text-gray-300">
            {t('about.whatIBelieve.fourth.text')}
          </p>
        </div>
      </div>
    </div>

    <!-- Why This Blog -->
    <div class="mb-16">
      <h2 class="mb-6 text-3xl font-bold text-gray-900 dark:text-white">
        {t('about.whyThisBlog.title')}
      </h2>
      <p class="mb-4 text-lg text-gray-700 dark:text-gray-300">
        {t('about.whyThisBlog.text1')}
      </p>
      <p class="mb-4 text-lg text-gray-700 dark:text-gray-300">
        {t('about.whyThisBlog.text2')}
      </p>
    </div>

    <!-- CTA -->
    <div
      class="rounded-2xl bg-gradient-to-r from-orange-500 to-orange-600 p-12 text-center text-white"
    >
      <h2 class="mb-4 text-3xl font-bold">{t('about.cta.title')}</h2>
      <p class="mb-6 text-lg opacity-90">
        {t('about.cta.text')}
      </p>
      <a
        href="/contact"
        class="inline-block rounded-full bg-white px-8 py-3 font-semibold text-orange-600 transition-colors hover:bg-gray-100"
      >
        {t('about.cta.button')}
      </a>
    </div>
  </div>
</BaseLayout>
